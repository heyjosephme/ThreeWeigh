<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Weight Analytics</h1>
          <p class="text-sm text-gray-500 mt-1">Insights and trends from your weight tracking journey</p>
        </div>
        <%= link_to weight_entries_path, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <% if @analytics_data[:insufficient_data] %>
    <!-- Insufficient Data State -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
      <div class="max-w-md mx-auto">
        <svg class="h-12 w-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Not Enough Data Yet</h3>
        <p class="text-gray-500 mb-4">
          <%= @analytics_data[:message] %>. You currently have <%= @analytics_data[:total_entries] %>
          <%= "entry".pluralize(@analytics_data[:total_entries]) %>.
        </p>
        <%= link_to "Add Weight Entry", new_weight_entry_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  <% else %>
    <!-- Analytics Content -->

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
      <!-- Current Weight -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
              <svg class="h-4 w-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16l3-1m-3 1l-3-1"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Current Weight</p>
            <p class="text-2xl font-bold text-gray-900"><%= @analytics_data[:current_weight] %> lbs</p>
          </div>
        </div>
      </div>

      <!-- Weight Change -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 rounded-full <%= @analytics_data[:weight_change] < 0 ? 'bg-green-100' : @analytics_data[:weight_change] > 0 ? 'bg-red-100' : 'bg-gray-100' %> flex items-center justify-center">
              <% if @analytics_data[:weight_change] < 0 %>
                <svg class="h-4 w-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                </svg>
              <% elsif @analytics_data[:weight_change] > 0 %>
                <svg class="h-4 w-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              <% else %>
                <svg class="h-4 w-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                </svg>
              <% end %>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Total Change</p>
            <p class="text-2xl font-bold <%= @analytics_data[:weight_change] < 0 ? 'text-green-600' : @analytics_data[:weight_change] > 0 ? 'text-red-600' : 'text-gray-900' %>">
              <%= @analytics_data[:weight_change] > 0 ? '+' : '' %><%= @analytics_data[:weight_change].round(1) %> lbs
            </p>
          </div>
        </div>
      </div>

      <!-- Weekly Velocity -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 rounded-full bg-purple-100 flex items-center justify-center">
              <svg class="h-4 w-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Weekly Rate</p>
            <p class="text-2xl font-bold text-gray-900">
              <%= @analytics_data[:weight_velocity] > 0 ? '+' : '' %><%= @analytics_data[:weight_velocity] %> lbs/wk
            </p>
          </div>
        </div>
      </div>

      <!-- Consistency Score -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 rounded-full bg-yellow-100 flex items-center justify-center">
              <svg class="h-4 w-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Consistency</p>
            <p class="text-2xl font-bold text-gray-900"><%= @analytics_data[:consistency_score] %>%</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <!-- Weight Trend Chart -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Weight Trend</h3>
        <div class="h-64">
          <canvas id="weightChart" width="400" height="200"></canvas>
        </div>
      </div>

      <!-- Averages & Records -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Averages & Records</h3>
        <div class="space-y-4">
          <% if @analytics_data[:seven_day_average] %>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-500">7-Day Average</span>
              <span class="text-sm font-bold text-gray-900"><%= @analytics_data[:seven_day_average] %> lbs</span>
            </div>
          <% end %>

          <% if @analytics_data[:thirty_day_average] %>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-500">30-Day Average</span>
              <span class="text-sm font-bold text-gray-900"><%= @analytics_data[:thirty_day_average] %> lbs</span>
            </div>
          <% end %>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm font-medium text-gray-500">Lowest Weight</span>
              <div class="text-right">
                <div class="text-sm font-bold text-green-600"><%= @analytics_data[:lowest_weight][:weight] %> lbs</div>
                <div class="text-xs text-gray-500"><%= @analytics_data[:lowest_weight][:date]&.strftime("%b %d, %Y") %></div>
              </div>
            </div>

            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-500">Highest Weight</span>
              <div class="text-right">
                <div class="text-sm font-bold text-red-600"><%= @analytics_data[:highest_weight][:weight] %> lbs</div>
                <div class="text-xs text-gray-500"><%= @analytics_data[:highest_weight][:date]&.strftime("%b %d, %Y") %></div>
              </div>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-500">Trend Direction</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                           <%= @analytics_data[:weight_trend] == 'decreasing' ? 'bg-green-100 text-green-800' :
                               @analytics_data[:weight_trend] == 'increasing' ? 'bg-red-100 text-red-800' :
                               'bg-gray-100 text-gray-800' %>">
                <%= @analytics_data[:weight_trend].humanize %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Insights Section -->
    <% if @analytics_data[:best_week] || @analytics_data[:worst_week] %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Weekly Insights</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% if @analytics_data[:best_week] %>
            <div class="border border-green-200 rounded-lg p-4">
              <div class="flex items-center mb-2">
                <svg class="h-5 w-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                </svg>
                <span class="text-sm font-medium text-green-800">Best Week</span>
              </div>
              <p class="text-lg font-bold text-green-600">
                <%= @analytics_data[:best_week][:change].round(1) %> lbs lost
              </p>
              <p class="text-xs text-gray-500">
                <%= @analytics_data[:best_week][:start_date].strftime("%b %d") %> -
                <%= @analytics_data[:best_week][:end_date].strftime("%b %d, %Y") %>
              </p>
            </div>
          <% end %>

          <% if @analytics_data[:worst_week] %>
            <div class="border border-red-200 rounded-lg p-4">
              <div class="flex items-center mb-2">
                <svg class="h-5 w-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                <span class="text-sm font-medium text-red-800">Challenging Week</span>
              </div>
              <p class="text-lg font-bold text-red-600">
                +<%= @analytics_data[:worst_week][:change].round(1) %> lbs gained
              </p>
              <p class="text-xs text-gray-500">
                <%= @analytics_data[:worst_week][:start_date].strftime("%b %d") %> -
                <%= @analytics_data[:worst_week][:end_date].strftime("%b %d, %Y") %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Chart.js Script -->
<% unless @analytics_data[:insufficient_data] %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const ctx = document.getElementById('weightChart').getContext('2d');

      const chartData = <%= raw @analytics_data[:chart_data].to_json %>;
      const trendData = <%= raw @analytics_data[:trend_data].to_json %>;

      new Chart(ctx, {
        type: 'line',
        data: {
          labels: chartData.map(point => point.formatted_date),
          datasets: [
            {
              label: 'Weight',
              data: chartData.map(point => point.weight),
              borderColor: 'rgb(59, 130, 246)',
              backgroundColor: 'rgba(59, 130, 246, 0.1)',
              borderWidth: 2,
              fill: true,
              tension: 0.1
            },
            <% if @analytics_data[:trend_data].any? %>
            {
              label: '7-Day Trend',
              data: Array(chartData.length - trendData.length).fill(null).concat(trendData.map(point => point.trend_weight)),
              borderColor: 'rgb(34, 197, 94)',
              backgroundColor: 'transparent',
              borderWidth: 2,
              borderDash: [5, 5],
              fill: false,
              tension: 0.1
            }
            <% end %>
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              position: 'top'
            }
          },
          scales: {
            y: {
              beginAtZero: false,
              grid: {
                color: 'rgba(0, 0, 0, 0.1)'
              }
            },
            x: {
              grid: {
                display: false
              }
            }
          },
          elements: {
            point: {
              radius: 3,
              hoverRadius: 6
            }
          }
        }
      });
    });
  </script>
<% end %>
