<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Three Weigh" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen" data-controller="timezone">

    <% if user_signed_in? %>
      <!-- Twitter/X-style Layout -->
      <div class="flex h-screen overflow-hidden">

        <!-- Sidebar -->
        <div class="flex flex-col w-16 md:w-64 bg-white border-r border-gray-200">
          <!-- Logo -->
          <div class="flex items-center justify-center md:justify-start h-16 px-3 md:px-6 border-b border-gray-200">
            <%= link_to dashboard_path, class: "flex items-center" do %>
              <h1 class="text-xl font-bold text-gray-900 hidden md:block">ThreeWeigh</h1>
              <div class="md:hidden w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-sm">TW</span>
              </div>
            <% end %>
          </div>

          <!-- Navigation -->
          <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
            <%= link_to dashboard_path, class: "flex items-center justify-center md:justify-start px-3 py-2 text-sm font-medium rounded-lg transition-colors #{current_page?(dashboard_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
              <svg class="w-5 h-5 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span class="hidden md:block">Dashboard</span>
            <% end %>

            <%= link_to weight_entries_path, class: "flex items-center justify-center md:justify-start px-3 py-2 text-sm font-medium rounded-lg transition-colors #{current_page?(weight_entries_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
              <svg class="w-5 h-5 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16l3-1m-3 1l-3-1"></path>
              </svg>
              <span class="hidden md:block">Weight Tracking</span>
            <% end %>

            <%= link_to weight_analytics_path, class: "flex items-center justify-center md:justify-start px-3 py-2 text-sm font-medium rounded-lg transition-colors #{current_page?(weight_analytics_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
              <svg class="w-5 h-5 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <span class="hidden md:block">Analytics</span>
            <% end %>

            <%= link_to fasting_entries_path, class: "flex items-center justify-center md:justify-start px-3 py-2 text-sm font-medium rounded-lg transition-colors #{current_page?(fasting_entries_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
              <svg class="w-5 h-5 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="hidden md:block">Fasting Tracker</span>
            <% end %>

            <div class="my-4 border-t border-gray-200"></div>

            <%= link_to profile_path, class: "flex items-center justify-center md:justify-start px-3 py-2 text-sm font-medium rounded-lg transition-colors #{current_page?(profile_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
              <svg class="w-5 h-5 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span class="hidden md:block">Profile</span>
            <% end %>

            <!-- Add Entry Buttons -->
            <div class="mt-6 space-y-2">
              <%= link_to new_weight_entry_path, class: "flex items-center justify-center w-full px-2 md:px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span class="hidden md:inline">Add Weight</span>
              <% end %>

              <div id="sidebar-start-fast-button">
                <%= render "shared/start_fast_button" %>
              </div>
            </div>
          </nav>

          <!-- User section at bottom -->
          <div class="p-2 md:p-4 border-t border-gray-200">
            <div class="flex items-center justify-center md:justify-start">
              <div class="flex-1 min-w-0 hidden md:block">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= current_user.email.split('@').first.capitalize %>
                </p>
                <p class="text-xs text-gray-500 truncate">
                  <%= current_user.email %>
                </p>
              </div>
              <%= link_to destroy_user_session_path,
                  data: { "turbo-method": "delete", "turbo-confirm": "Are you sure?" },
                  class: "md:ml-3 p-2 text-gray-400 hover:text-gray-600 transition-colors",
                  title: "Sign out" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-1 overflow-y-auto">
          <!-- Flash Messages -->
          <%= render "shared/flash_messages" %>

          <main class="p-6">
            <%= yield %>
          </main>
        </div>
      </div>

    <% else %>
      <!-- Non-authenticated layout -->
      <%= render "shared/flash_messages" %>
      <main class="container mx-auto mt-8 px-5 flex justify-center">
        <%= yield %>
      </main>
    <% end %>
  </body>
</html>
