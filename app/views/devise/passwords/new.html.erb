<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
  <div class="text-center mb-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-2">Forgot Password?</h2>
    <p class="text-gray-600">Enter your email to reset your password</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true, class: "space-y-6") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Enter your email" %>
    </div>

    <div>
      <%= f.submit "Send Reset Instructions", 
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
