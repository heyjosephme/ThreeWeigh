<% if current_fast %>
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-200 p-6 transition-all duration-300 ease-in-out transform"
       data-controller="fasting-timer"
       data-fasting-timer-start-time-value="<%= current_fast.start_time.iso8601 %>"
       data-fasting-timer-planned-duration-value="<%= current_fast.planned_duration %>"
       data-fasting-timer-id-value="<%= current_fast.id %>">
    
    <div class="flex justify-between items-start mb-6">
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-2">ğŸƒâ€â™‚ï¸ Fast in Progress</h2>
        <p class="text-gray-600">Started <%= current_fast.start_time.strftime("%B %d at %I:%M %p") %></p>
        <% if current_fast.notes.present? %>
          <p class="text-sm text-gray-500 mt-1 italic">"<%= current_fast.notes %>"</p>
        <% end %>
      </div>
      
      <div class="flex space-x-2">
        <% goal_reached = current_fast.progress_percentage >= 100 %>

        <% if goal_reached %>
          <%= link_to complete_fasting_entry_path(current_fast),
              data: {
                "turbo-method": "patch",
                "turbo-confirm": "Congratulations! Mark this fast as completed?"
              },
              class: "inline-flex items-center px-3 py-2 border border-green-300 shadow-sm text-sm font-medium rounded text-green-700 bg-white hover:bg-green-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Complete Fast
          <% end %>
        <% else %>
          <button disabled
                  class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded text-gray-400 bg-gray-50 cursor-not-allowed opacity-50"
                  title="Complete your fasting goal first (#{current_fast.time_remaining_text.downcase})">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Complete Fast
          </button>
        <% end %>
        
        <%= link_to break_fasting_entry_path(current_fast),
            data: {
              "turbo-method": "patch",
              "turbo-confirm": "Are you sure you want to break your fast?"
            },
            class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          Break Fast
        <% end %>
      </div>
    </div>

    <!-- Timer Display -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Current Duration -->
      <div class="text-center">
        <div class="text-3xl font-bold text-gray-900 mb-2" data-fasting-timer-target="currentDuration">
          <%= current_fast.duration_text %>
        </div>
        <p class="text-sm text-gray-600">Current Duration</p>
      </div>

      <!-- Goal -->
      <div class="text-center">
        <div class="text-2xl font-semibold text-blue-600 mb-2">
          <%= "#{current_fast.planned_duration_hours.round(1)}h" %>
        </div>
        <p class="text-sm text-gray-600">Goal Duration</p>
      </div>

      <!-- Time Remaining -->
      <div class="text-center">
        <div class="text-2xl font-semibold mb-2" data-fasting-timer-target="timeRemaining">
          <%= current_fast.time_remaining_text %>
        </div>
        <p class="text-sm text-gray-600">Time Remaining</p>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="mt-6">
      <div class="flex justify-between text-sm text-gray-600 mb-2">
        <span>Progress</span>
        <span data-fasting-timer-target="progressPercentage"><%= "#{current_fast.progress_percentage}%" %></span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-3">
        <div class="bg-gradient-to-r from-blue-500 to-indigo-600 h-3 rounded-full transition-all duration-1000 ease-out"
             data-fasting-timer-target="progressBar"
             style="width: <%= current_fast.progress_percentage %>%"></div>
      </div>
      
      <% if current_fast.progress_percentage >= 100 %>
        <div class="mt-3 p-3 bg-green-50 rounded-md border border-green-200">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-green-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-sm font-medium text-green-800">ğŸ‰ Congratulations! You've reached your fasting goal!</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="bg-gray-50 rounded-lg border border-gray-200 p-6 text-center transition-all duration-300 ease-in-out transform">
    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No Active Fast</h3>
    <p class="text-gray-600">Start a new fast below to begin tracking your progress.</p>
  </div>
<% end %>