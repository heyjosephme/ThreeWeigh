<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <%= link_to fasting_entries_path, class: "text-gray-400 hover:text-gray-600" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">
              Fast started <%= @fasting_entry.start_time.strftime("%B %d, %Y") %>
            </h1>
            <p class="text-sm text-gray-500 mt-1">
              <%= @fasting_entry.start_time.strftime("%I:%M %p") %> -
              <%= @fasting_entry.end_time&.strftime("%I:%M %p") || "Active" %>
            </p>
          </div>
        </div>

        <div class="flex items-center space-x-3">
          <% unless @fasting_entry.active? %>
            <%= link_to edit_fasting_entry_path(@fasting_entry),
                class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit
            <% end %>
          <% end %>

          <%= link_to fasting_entry_path(@fasting_entry, format: :html),
              data: { "turbo-method": "delete", "turbo-confirm": "Are you sure you want to delete this fasting entry?" },
              class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-600 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Status & Overview -->
    <div class="space-y-6">
      <!-- Status Card -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center space-x-4 mb-6">
          <div class="h-12 w-12 rounded-full flex items-center justify-center
                      <%= @fasting_entry.completed? ? 'bg-green-100' : @fasting_entry.broken? ? 'bg-red-100' : 'bg-blue-100' %>">
            <% if @fasting_entry.completed? %>
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            <% elsif @fasting_entry.broken? %>
              <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            <% else %>
              <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            <% end %>
          </div>
          <div>
            <div class="flex items-center space-x-3">
              <h2 class="text-xl font-semibold text-gray-900">
                <%= @fasting_entry.status.humanize %>
              </h2>
              <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium
                           <%= @fasting_entry.completed? ? 'bg-green-100 text-green-800' : @fasting_entry.broken? ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
                <%= @fasting_entry.status.humanize %>
              </span>
            </div>
            <% if @fasting_entry.completed? %>
              <p class="text-sm text-green-600 mt-1">ðŸŽ‰ Congratulations on completing your fast!</p>
            <% elsif @fasting_entry.broken? %>
              <p class="text-sm text-red-600 mt-1">Don't worry, you'll do better next time!</p>
            <% else %>
              <p class="text-sm text-blue-600 mt-1" data-controller="fasting-timer" data-fasting-timer-start-value="<%= @fasting_entry.start_time.iso8601 %>">
                Keep going! You're doing great.
              </p>
            <% end %>
          </div>
        </div>

        <!-- Progress -->
        <div class="mb-6">
          <div class="flex justify-between text-sm text-gray-600 mb-2">
            <span>Progress</span>
            <span><%= @fasting_entry.progress_percentage %>%</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-3">
            <div class="bg-gradient-to-r from-blue-500 to-green-500 h-3 rounded-full transition-all duration-500 ease-out"
                 style="width: <%= [@fasting_entry.progress_percentage, 100].min %>%"></div>
          </div>
          <% if @fasting_entry.progress_percentage >= 100 %>
            <p class="text-xs text-green-600 mt-1 font-medium">ðŸŽ¯ Goal achieved!</p>
          <% end %>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Goal Duration</p>
            <p class="text-2xl font-bold text-gray-900"><%= "#{@fasting_entry.planned_duration_hours.round(1)}h" %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">
              <% if @fasting_entry.active? %>Current<% else %>Actual<% end %> Duration
            </p>
            <p class="text-2xl font-bold text-gray-900"
               <% if @fasting_entry.active? %>
                 data-controller="fasting-timer"
                 data-fasting-timer-start-value="<%= @fasting_entry.start_time.iso8601 %>"
                 data-fasting-timer-target="duration"
               <% end %>>
              <%= @fasting_entry.duration_text %>
            </p>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <% if @fasting_entry.notes.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Notes</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-gray-700 italic">"<%= @fasting_entry.notes %>"</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Timing Details & Actions -->
    <div class="space-y-6">
      <!-- Timing Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Timing Details</h3>

        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900">Started</p>
              <p class="text-sm text-gray-600">
                <%= @fasting_entry.start_time.strftime("%B %d, %Y at %I:%M %p") %>
              </p>
            </div>
          </div>

          <% if @fasting_entry.end_time %>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-<%= @fasting_entry.completed? ? 'green' : 'red' %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <% if @fasting_entry.completed? %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  <% else %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  <% end %>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900">
                  <%= @fasting_entry.completed? ? 'Completed' : 'Ended' %>
                </p>
                <p class="text-sm text-gray-600">
                  <%= @fasting_entry.end_time.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
            </div>
          <% else %>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="h-2 w-2 bg-blue-500 rounded-full animate-pulse"></div>
              </div>
              <div>
                <p class="text-sm font-medium text-blue-600">Currently Active</p>
                <p class="text-sm text-gray-600">Fast is in progress</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions for Active Fast -->
      <% if @fasting_entry.active? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Actions</h3>

          <div class="space-y-3">
            <%= link_to complete_fasting_entry_path(@fasting_entry),
                data: { "turbo-method": "patch" },
                id: "complete-fast-button",
                data: {
                  controller: "complete-button",
                  "complete-button-start-value": @fasting_entry.start_time.iso8601,
                  "complete-button-duration-value": @fasting_entry.planned_duration
                },
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-50 disabled:cursor-not-allowed transition-colors duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Complete Fast
            <% end %>

            <%= link_to break_fasting_entry_path(@fasting_entry),
                data: {
                  "turbo-method": "patch",
                  "turbo-confirm": "Are you sure you want to end this fast early? This action cannot be undone."
                },
                class: "w-full flex justify-center py-3 px-4 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              End Fast Early
            <% end %>
          </div>

          <div class="mt-4 p-3 bg-blue-50 rounded-lg">
            <p class="text-xs text-blue-600">
              <strong>Tip:</strong> The complete button will be enabled once you reach your fasting goal!
            </p>
          </div>
        </div>
      <% end %>

      <!-- Timeline (if completed or broken) -->
      <% unless @fasting_entry.active? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Timeline</h3>

          <div class="flow-root">
            <ul class="-mb-8">
              <li>
                <div class="relative pb-8">
                  <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"></span>
                  <div class="relative flex space-x-3">
                    <div>
                      <span class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center ring-8 ring-white">
                        <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </span>
                    </div>
                    <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                      <div>
                        <p class="text-sm text-gray-900">Fast started</p>
                      </div>
                      <div class="text-right text-sm whitespace-nowrap text-gray-500">
                        <%= @fasting_entry.start_time.strftime("%I:%M %p") %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>

              <li>
                <div class="relative">
                  <div class="relative flex space-x-3">
                    <div>
                      <span class="h-8 w-8 rounded-full bg-<%= @fasting_entry.completed? ? 'green' : 'red' %>-500 flex items-center justify-center ring-8 ring-white">
                        <% if @fasting_entry.completed? %>
                          <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                        <% else %>
                          <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                          </svg>
                        <% end %>
                      </span>
                    </div>
                    <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                      <div>
                        <p class="text-sm text-gray-900">
                          Fast <%= @fasting_entry.completed? ? 'completed' : 'ended early' %>
                        </p>
                        <p class="text-sm text-gray-500">
                          Duration: <%= @fasting_entry.duration_text %>
                        </p>
                      </div>
                      <div class="text-right text-sm whitespace-nowrap text-gray-500">
                        <%= @fasting_entry.end_time.strftime("%I:%M %p") %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
