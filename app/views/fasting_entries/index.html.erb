<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Fasting Tracker</h1>
        <p class="text-gray-600 mt-2">Track your intermittent fasting journey</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Current Fast Status -->
  <div id="current-fast" class="mb-8">
    <%= render 'current_fast', current_fast: @current_fast %>
  </div>

  <!-- Quick Start Fast -->
  <!-- TODO: better UI for time? progress bar vs clock ?-->
  <% unless @current_fast %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Start a New Fast</h2>
      
      <%= form_with url: start_fast_fasting_entries_path, method: :post, class: "space-y-4", data: { controller: "fasting-form" } do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div>
            <%= form.label :planned_duration, "Fasting Goal", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :planned_duration,
                options_for_select([
                  ['12 hours', 12 * 60],
                  ['16 hours (16:8)', 16 * 60],
                  ['18 hours', 18 * 60],
                  ['20 hours', 20 * 60],
                  ['24 hours (OMAD)', 24 * 60],
                  ['36 hours', 36 * 60],
                  ['48 hours', 48 * 60]
                ], 16 * 60),
                {},
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.datetime_local_field :start_time,
                value: Time.current.strftime("%Y-%m-%dT%H:%M"),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                data: { fasting_form_target: "startTime" } %>
          </div>

          <div>
            <%= form.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :notes,
                placeholder: "e.g., After lunch",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div class="flex items-end">
            <%= form.submit "Start Fast",
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          </div>
        </div>

        <!-- Quick Time Presets -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <p class="text-sm font-medium text-gray-700 mb-3">Quick Start Times:</p>
          <div class="flex flex-wrap gap-2" data-fasting-form-target="presets">
            <button type="button" data-action="click->fasting-form#setTime" data-time="<%= Date.current.strftime('%Y-%m-%d') %>T13:00"
                    class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 border border-blue-200 rounded-md hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
              After Lunch (1 PM)
            </button>
            <button type="button" data-action="click->fasting-form#setTime" data-time="<%= Date.current.strftime('%Y-%m-%d') %>T19:00"
                    class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 border border-blue-200 rounded-md hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
              After Dinner (7 PM)
            </button>
            <button type="button" data-action="click->fasting-form#setTime" data-time="<%= Date.current.strftime('%Y-%m-%d') %>T20:00"
                    class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 border border-blue-200 rounded-md hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
              Evening (8 PM)
            </button>
            <button type="button" data-action="click->fasting-form#setTime" data-time="<%= Date.current.strftime('%Y-%m-%d') %>T22:00"
                    class="px-3 py-1 text-xs font-medium text-blue-700 bg-blue-50 border border-blue-200 rounded-md hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
              Late Night (10 PM)
            </button>
            <button type="button" data-action="click->fasting-form#setNow"
                    class="px-3 py-1 text-xs font-medium text-green-700 bg-green-50 border border-green-200 rounded-md hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-500">
              Right Now
            </button>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Stats Summary -->
  <div id="stats-summary" class="mb-8">
    <%= render 'stats_summary', fasting_entries: @fasting_entries, current_user: current_user %>
  </div>

  <!-- Fasting History -->
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Fasting History</h3>
      
      <div id="fasting-entries-list">
        <%= render 'fasting_entries_list', fasting_entries: @fasting_entries %>
      </div>
    </div>
  </div>
</div>