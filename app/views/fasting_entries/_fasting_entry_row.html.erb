<li id="fasting-entry-<%= fasting_entry.id %>" class="relative">
  <div class="block hover:bg-gray-50 px-4 py-4 sm:px-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center min-w-0 flex-1">
        <div class="flex-shrink-0">
          <div class="h-10 w-10 rounded-full flex items-center justify-center
                      <%= fasting_entry.completed? ? 'bg-green-100' : fasting_entry.broken? ? 'bg-red-100' : 'bg-blue-100' %>">
            <% if fasting_entry.completed? %>
              <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            <% elsif fasting_entry.broken? %>
              <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            <% else %>
              <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            <% end %>
          </div>
        </div>
        
        <div class="min-w-0 flex-1 ml-4">
          <div class="flex items-center justify-between">
            <div>
              <div class="flex items-center space-x-2">
                <p class="text-sm font-semibold text-gray-900">
                  <%= fasting_entry.start_time.strftime("%B %d, %Y") %>
                </p>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                             <%= fasting_entry.completed? ? 'bg-green-100 text-green-800' : fasting_entry.broken? ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
                  <%= fasting_entry.status.humanize %>
                </span>
              </div>
              
              <div class="mt-1 flex items-center space-x-4 text-sm text-gray-500">
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>Goal: <%= "#{fasting_entry.planned_duration_hours.round(1)}h" %></span>
                </div>
                
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7"></path>
                  </svg>
                  <span>
                    <% if fasting_entry.active? %>
                      Current: <%= fasting_entry.duration_text %>
                    <% else %>
                      Duration: <%= fasting_entry.duration_text %>
                    <% end %>
                  </span>
                </div>
                
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span><%= fasting_entry.start_time.strftime("%I:%M %p") %> - 
                        <%= fasting_entry.end_time&.strftime("%I:%M %p") || "Active" %></span>
                </div>
              </div>
              
              <% if fasting_entry.notes.present? %>
                <p class="mt-2 text-sm text-gray-600 italic">
                  "<%= fasting_entry.notes %>"
                </p>
              <% end %>
            </div>
            
            <div class="flex items-center space-x-2">
              <% unless fasting_entry.active? %>
                <div class="text-right mr-4">
                  <% if fasting_entry.completed? %>
                    <div class="text-sm font-medium text-green-600">
                      <%= "#{fasting_entry.progress_percentage}% complete" %>
                    </div>
                    <% if fasting_entry.progress_percentage >= 100 %>
                      <div class="text-xs text-green-500">ðŸŽ‰ Goal achieved!</div>
                    <% end %>
                  <% elsif fasting_entry.broken? %>
                    <div class="text-sm font-medium text-red-600">
                      <%= "#{fasting_entry.progress_percentage}% complete" %>
                    </div>
                    <div class="text-xs text-red-500">Fast ended early</div>
                  <% end %>
                </div>
              <% end %>

              <!-- Delete Button -->
              <%= link_to fasting_entry_path(fasting_entry),
                  data: {
                    "turbo-method": "delete",
                    "turbo-confirm": "Are you sure you want to delete this fasting entry?"
                  },
                  class: "inline-flex items-center p-1 border border-red-300 rounded text-red-600 hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                  title: "Delete fasting entry" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>