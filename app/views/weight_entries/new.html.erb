<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Add Weight Entry</h1>
        <p class="text-gray-600 mt-2">Log your current weight to track your progress</p>
      </div>
      <div>
        <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Weight Entry Form -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Quick Weight Entry</h2>
      <p class="text-sm text-gray-500 mt-1">This should take less than 30 seconds</p>
    </div>
    <div class="p-6">
      <!-- Error Messages -->
      <% if @weight_entry.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <ul class="mt-2 text-sm text-red-700">
                <% @weight_entry.errors.full_messages.each do |error| %>
                  <li>â€¢ <%= error %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_with model: @weight_entry, local: true, class: "space-y-6" do |form| %>
        <!-- Weight Input -->
        <div>
          <%= form.label :weight, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= form.number_field :weight,
                step: 0.1,
                placeholder: "Enter your weight",
                autofocus: true,
                class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg pr-16" %>
            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
              <span class="text-gray-500 text-lg">kg</span>
            </div>
          </div>
        </div>

        <!-- Date Input -->
        <div>
          <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :date,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg" %>
        </div>

        <!-- Notes Input (Optional) -->
        <div>
          <%= form.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :notes,
              rows: 3,
              placeholder: "How are you feeling? Any notes about your progress...",
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none" %>
        </div>

        <!-- Submit Buttons -->
        <div class="flex space-x-3">
          <%= form.submit "Log Weight",
              class: "flex-1 inline-flex justify-center items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
          <%= link_to dashboard_path,
              class: "inline-flex justify-center items-center px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
            Cancel
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Helpful Tips -->
  <div class="mt-8 bg-blue-50 rounded-lg p-6">
    <h3 class="text-sm font-medium text-blue-800 mb-2">ðŸ’¡ Quick Logging Tips</h3>
    <ul class="text-sm text-blue-700 space-y-1">
      <li>â€¢ Weigh yourself at the same time each day for consistency</li>
      <li>â€¢ Morning weights (after bathroom, before eating) tend to be most accurate</li>
      <li>â€¢ Daily fluctuations are normal - focus on weekly trends</li>
      <li>â€¢ Use the notes field to track how you're feeling or what you ate</li>
    </ul>
  </div>
</div>