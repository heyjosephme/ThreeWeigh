<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome back, <%= current_user.email.split('@').first.capitalize %>!</h1>
    <p class="text-gray-600">Track your weight journey</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Current Weight -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-500 bg-opacity-10">
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Current Weight</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= @latest_weight ? "#{@latest_weight.weight} lbs" : "No entries yet" %>
          </p>
        </div>
      </div>
    </div>

    <!-- Trend -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full <%= @weight_trend ? (@weight_trend > 0 ? 'bg-red-500' : 'bg-green-500') : 'bg-gray-500' %> bg-opacity-10">
          <% if @weight_trend %>
            <svg class="w-6 h-6 <%= @weight_trend > 0 ? 'text-red-500' : 'text-green-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if @weight_trend > 0 %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              <% end %>
            </svg>
          <% else %>
            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
            </svg>
          <% end %>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Recent Trend</p>
          <p class="text-2xl font-semibold text-gray-900">
            <% if @weight_trend %>
              <%= @weight_trend > 0 ? '+' : '' %><%= @weight_trend.round(1) %> lbs
            <% else %>
              No trend yet
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <!-- Total Entries -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-500 bg-opacity-10">
          <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Entries</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @total_entries %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Quick Entry Form -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Log Today's Weight</h2>
      </div>
      <div class="p-6">
        <%= form_with model: @new_weight_entry, local: true, class: "space-y-4" do |form| %>
          <div>
            <%= form.label :weight, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="relative">
              <%= form.number_field :weight, 
                  step: 0.1, 
                  placeholder: "Enter weight",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 pr-12" %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <span class="text-gray-500 text-sm">lbs</span>
              </div>
            </div>
          </div>

          <div>
            <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.date_field :date, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :notes, 
                rows: 3,
                placeholder: "How are you feeling? Any notes about today?",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.submit "Log Weight", 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Entries -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Recent Entries</h2>
      </div>
      <div class="p-6">
        <% if @weight_entries.any? %>
          <div class="space-y-4" id="weight-entries">
            <% @weight_entries.each do |entry| %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg" id="weight-entry-<%= entry.id %>">
                <div class="flex-1">
                  <div class="flex items-center space-x-3">
                    <div class="text-lg font-semibold text-gray-900"><%= entry.weight %> lbs</div>
                    <div class="text-sm text-gray-500"><%= entry.date.strftime("%b %d, %Y") %></div>
                  </div>
                  <% if entry.notes.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= entry.notes %></p>
                  <% end %>
                </div>
                <div class="flex space-x-2">
                  <%= link_to edit_weight_entry_path(entry), 
                      class: "text-blue-600 hover:text-blue-500 text-sm" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to weight_entry_path(entry), 
                      method: :delete, 
                      class: "text-red-600 hover:text-red-500 text-sm",
                      data: { 
                        turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete this weight entry? This action cannot be undone." 
                      } do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No weight entries yet</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by logging your first weight entry!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>


</div>
