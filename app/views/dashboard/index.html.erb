<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome back, <%= current_user.email.split('@').first.capitalize %>!</h1>
    <p class="text-gray-600">Track your weight journey</p>
  </div>

  <!-- Weight Logging Streak Card (Habit Building) -->
  <div class="mb-8">
    <div class="<%= @logged_today ? 'bg-gradient-to-r from-green-500 to-emerald-600' : 'bg-gradient-to-r from-orange-500 to-red-600' %> rounded-lg shadow-lg p-6 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-6">
          <!-- Current Streak -->
          <div class="text-center">
            <div class="text-5xl font-bold mb-1"><%= @weight_logging_streak %></div>
            <div class="text-sm font-medium uppercase tracking-wide opacity-90">Day Streak üî•</div>
          </div>

          <!-- Divider -->
          <div class="h-16 w-px bg-white opacity-30"></div>

          <!-- Best Streak -->
          <div class="text-center">
            <div class="text-3xl font-bold mb-1"><%= @longest_weight_streak %></div>
            <div class="text-sm font-medium uppercase tracking-wide opacity-90">Best Streak üèÜ</div>
          </div>

          <!-- Divider -->
          <div class="h-16 w-px bg-white opacity-30"></div>

          <!-- Today's Status -->
          <div class="flex flex-col items-center">
            <% if @logged_today %>
              <svg class="w-12 h-12 mb-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <div class="text-sm font-bold">Logged Today! ‚úÖ</div>
            <% else %>
              <svg class="w-12 h-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="text-sm font-bold">Log Your Weight! ‚è∞</div>
            <% end %>
          </div>
        </div>

        <!-- Motivational Message -->
        <div class="text-right">
          <% if @weight_logging_streak >= 30 %>
            <div class="text-2xl font-bold mb-1">üéâ Incredible!</div>
            <div class="text-sm opacity-90">30+ day champion!</div>
          <% elsif @weight_logging_streak >= 7 %>
            <div class="text-2xl font-bold mb-1">üéØ Keep Going!</div>
            <div class="text-sm opacity-90">One week strong!</div>
          <% elsif @weight_logging_streak > 0 %>
            <div class="text-2xl font-bold mb-1">üí™ Building Momentum!</div>
            <div class="text-sm opacity-90">Every day counts!</div>
          <% else %>
            <div class="text-2xl font-bold mb-1">üöÄ Start Your Streak!</div>
            <div class="text-sm opacity-90">Log weight to begin</div>
          <% end %>
        </div>
      </div>

      <!-- Progress to Next Milestone -->
      <% if @weight_logging_streak > 0 && @weight_logging_streak < 30 %>
        <% next_milestone = @weight_logging_streak < 7 ? 7 : 30 %>
        <% progress = (@weight_logging_streak.to_f / next_milestone * 100).round %>
        <div class="mt-4 pt-4 border-t border-white border-opacity-30">
          <div class="flex items-center justify-between text-sm mb-2">
            <span class="opacity-90">Progress to <%= next_milestone %> days</span>
            <span class="font-bold"><%= @weight_logging_streak %> / <%= next_milestone %></span>
          </div>
          <div class="w-full bg-white bg-opacity-30 rounded-full h-2">
            <div class="bg-white rounded-full h-2 transition-all duration-300" style="width: <%= progress %>%"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Current Weight -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-500 bg-opacity-10">
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Current Weight</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= @latest_weight ? "#{@latest_weight.weight} kg" : "No entries yet" %>
          </p>
        </div>
      </div>
    </div>

    <!-- Trend -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full <%= @weight_trend ? (@weight_trend > 0 ? 'bg-red-500' : 'bg-green-500') : 'bg-gray-500' %> bg-opacity-10">
          <% if @weight_trend %>
            <svg class="w-6 h-6 <%= @weight_trend > 0 ? 'text-red-500' : 'text-green-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if @weight_trend > 0 %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              <% end %>
            </svg>
          <% else %>
            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
            </svg>
          <% end %>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Recent Trend</p>
          <p class="text-2xl font-semibold text-gray-900">
            <% if @weight_trend %>
              <%= @weight_trend > 0 ? '+' : '' %><%= @weight_trend.round(1) %> kg
            <% else %>
              No trend yet
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <!-- Total Entries -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-500 bg-opacity-10">
          <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Entries</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @total_entries %></p>
        </div>
      </div>
    </div>

    <!-- Active Fasting Session -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <% if @current_fast %>
          <div class="p-3 rounded-full bg-orange-500 bg-opacity-10">
            <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Current Fast</p>
            <p class="text-lg font-semibold text-gray-900"><%= @current_fast.duration_text %></p>
            <p class="text-xs text-gray-500"><%= @current_fast.progress_percentage.round %>% complete</p>
          </div>
        <% else %>
          <div class="p-3 rounded-full bg-gray-500 bg-opacity-10">
            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Current Fast</p>
            <p class="text-2xl font-semibold text-gray-900">No active fast</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Fasting Stats Row -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Fasting Streak -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-purple-500 bg-opacity-10">
          <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Current Streak</p>
          <p class="text-2xl font-semibold text-gray-900">
            <%= @fasting_stats[:current_streak] %> fast<%= @fasting_stats[:current_streak] != 1 ? 's' : '' %>
          </p>
        </div>
      </div>
    </div>

    <!-- Total Fasts -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-indigo-500 bg-opacity-10">
          <svg class="w-6 h-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Fasts</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @fasting_stats[:total_fasts] %></p>
        </div>
      </div>
    </div>

    <!-- Completion Rate -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-emerald-500 bg-opacity-10">
          <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Completion Rate</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @fasting_stats[:completion_rate] %>%</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Weight Logging Activity Heatmap -->
  <div class="bg-white rounded-lg shadow mb-8 p-6">
    <%= render WeightHeatmapComponent.new(user: current_user, days: 365) %>
  </div>

  <!-- Recent Fasting Activity -->
  <% if @fasting_stats[:recent_fasts].any? %>
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Recent Fasting Activity</h2>
        <p class="text-sm text-gray-500 mt-1">Your latest fasting sessions</p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @fasting_stats[:recent_fasts].each do |fast| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="p-2 rounded-full <%= fast.completed? ? 'bg-green-100' : fast.broken? ? 'bg-red-100' : 'bg-orange-100' %>">
                    <% if fast.completed? %>
                      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    <% elsif fast.broken? %>
                      <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    <% else %>
                      <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
                <div class="ml-4">
                  <p class="text-sm font-medium text-gray-900">
                    <%= fast.planned_duration_hours.round(1) %>h fast
                    <span class="text-gray-500">
                      ‚Ä¢ <%= fast.start_time.strftime("%b %d, %Y") %>
                    </span>
                  </p>
                  <p class="text-xs text-gray-500">
                    <% if fast.active? %>
                      Currently active ‚Ä¢ <%= fast.duration_text %>
                    <% else %>
                      <%= fast.status.capitalize %> ‚Ä¢ <%= fast.duration_text %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="flex-shrink-0">
                <%= link_to fasting_entry_path(fast), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
                  View
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-4 text-center">
          <%= link_to fasting_entries_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
            View all fasting entries ‚Üí
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Weight Progress Chart -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Weight Progress</h2>
      <p class="text-sm text-gray-500 mt-1">Your weight journey over the last 30 days</p>
    </div>
    <div class="p-6">
      <% if @chart_data.any? %>
        <div data-controller="weight-chart" 
             data-weight-chart-data-value="<%= @chart_data.to_json %>"
             data-weight-chart-labels-value="<%= @chart_labels.to_json %>"
             class="h-96">
          <canvas data-weight-chart-target="canvas" class="w-full h-full"></canvas>
        </div>
      <% else %>
        <div class="text-center py-16">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No weight data yet</h3>
          <p class="mt-2 text-sm text-gray-500">Start logging your weight to see your progress chart!</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Quick Weight Entry -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Log Today's Weight</h2>
    </div>
    <div class="p-6">
      <%= form_with model: @new_weight_entry, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
        <div>
          <%= form.label :weight, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <%= form.number_field :weight, 
                step: 0.1, 
                placeholder: "Enter weight",
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 pr-8" %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <span class="text-gray-500 text-sm">kg</span>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :notes, 
              placeholder: "How are you feeling?",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex items-end">
          <%= form.submit "Log Weight", 
              class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
        </div>
      <% end %>
    </div>
  </div>


</div>
