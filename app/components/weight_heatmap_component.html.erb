<div class="weight-heatmap-container">
  <!-- Header -->
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-semibold text-gray-900">Weight Logging Activity</h3>
    <p class="text-sm text-gray-500"><%= @days %> days</p>
  </div>

  <% if @heatmap_data.empty? %>
    <!-- Empty State -->
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No logging data yet</h3>
      <p class="mt-1 text-sm text-gray-500">Start logging your weight to see your activity heatmap!</p>
    </div>
  <% else %>
    <!-- Heatmap Grid -->
    <div class="heatmap-wrapper overflow-x-auto">
      <div class="inline-flex gap-1">
        <!-- Day of week labels (left side) -->
        <div class="flex flex-col justify-around pr-2 text-xs text-gray-500">
          <span>Mon</span>
          <span>Wed</span>
          <span>Fri</span>
        </div>

        <!-- Heatmap columns (weeks) -->
        <div class="flex gap-1">
          <% weeks.each do |week| %>
            <div class="flex flex-col gap-1">
              <% week.each do |day| %>
                <div class="<%= intensity_class(day) %> w-3 h-3 rounded-sm hover:ring-2 hover:ring-blue-400 transition-all cursor-pointer"
                     title="<%= tooltip_text(day) %>">
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Month labels (bottom) -->
      <div class="flex gap-1 mt-2 text-xs text-gray-500 ml-8">
        <% month_labels.each do |month| %>
          <span class="w-12"><%= month %></span>
        <% end %>
      </div>
    </div>

    <!-- Legend -->
    <div class="flex items-center justify-end gap-2 mt-4 text-xs text-gray-600">
      <span>Less</span>
      <div class="bg-gray-200 w-3 h-3 rounded-sm"></div>
      <div class="bg-green-200 w-3 h-3 rounded-sm"></div>
      <div class="bg-green-400 w-3 h-3 rounded-sm"></div>
      <div class="bg-green-500 w-3 h-3 rounded-sm"></div>
      <span>More</span>
    </div>
  <% end %>
</div>
